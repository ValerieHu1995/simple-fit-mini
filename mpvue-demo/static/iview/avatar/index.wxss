.i-avatar {
  display: inline-block;
  text-align: center;
  background: #ccc;
  color: #fff;
  white-space: nowrap;
  position: relative;
  overflow: hidden;
  vertical-align: middle;
  width: 32px;
  height: 32px;
  line-height: 32px;
  border-radius: 16px;
  font-size: 18px
}

.i-avatar .ivu-avatar-string {
  line-height: 32px
}

.i-avatar-large {
  width: 72px;
  height: 72px;
  line-height:72px;
  border-radius: 36px;
  font-size: 42px
}

.i-avatar-large .ivu-avatar-string {
  line-height: 72px
}

.i-avatar-small {
  width: 24px;
  height: 24px;
  line-height: 24px;
  border-radius: 12px;
  font-size: 14px
}

.i-avatar-small .ivu-avatar-string {
  line-height: 24px
}

.i-avatar-image {
  background: 0 0
}

.i-avatar-square {
  border-radius: 4px
}

.i-avatar>image {
  width: 100%;
  height: 100%
}
